<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <GridLayout
        android:id="@+id/GridLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="2"
        tools:layout_editor_absoluteX="-132dp"
        tools:layout_editor_absoluteY="34dp">

        <Button
            android:id="@+id/viewRooms"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_gravity="left|top"
            android:layout_margin="5dp"
            android:backgroundTint="@color/mainRed"
            android:onClick="onViewRoom"
            android:text="View Rooms" />

        <Button
            android:id="@+id/orderRoomService"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_gravity="left|top"
            android:layout_margin="5dp"
            android:backgroundTint="@color/mainRed"
            android:onClick="onRoomService"
            android:text="Order Room Service" />

        <Button
            android:id="@+id/viewInfo"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_gravity="left|top"
            android:layout_margin="5dp"
            android:backgroundTint="@color/mainRed"
            android:text="View your Personal Info"
            android:onClick="onViewInfo"/>

        <Button
            android:id="@+id/imageButton6"
            android:layout_width="160dp"
            android:layout_height="90dp"
            android:layout_gravity="left|top"
            android:layout_margin="5dp"
            android:backgroundTint="@color/mainRed"
            android:text="Temp" />


    </GridLayout>

</androidx.appcompat.widget.LinearLayoutCompat>